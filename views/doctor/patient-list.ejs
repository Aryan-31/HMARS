<%- include('./header.ejs') %>
<div class="offset-2 col-10">
  <div class="container-fluid">
    <div class="card mb-7">
      <div class="card-header">
        <h4 >Patients</h4>
      </div>
      <div class="table-responsive">
        <table class="table table-hover table-striped table-nowrap">
          <thead class="thead-light">
            <tr>
              <th scope="col">Patient Name</th>
              <th scope="col">Email</th>
              <th scope="col">Last Visit</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% if (patientList.length < 1) { %>
              <tr>
                <td colspan="4">You have no patients</td>
              </tr>
            <% } else { %>
              <% for( let i = 0; i < patientList.length; i++ ) { %>
                <tr>
                  <td><%= patientList[i].patientName %></td>
                  <td><%= patientList[i].email %></td>
                  <td><%= lastVisits[i].visitedOn %></td>
                  <td class="text-end">
                    <a 
                    href="/doctor/patient-details" 
                    class="me-10"
                    onclick="location.href=this.href+'/'+`<%= patientList[i]._id %>`;return false"
                    >
                        <!-- <button class="btn btn-sm btn-neutral">View </button> -->
                      <i class="bi bi-folder2-open"></i>
                    </a>
                    <a
                      type="button"
                      class="me-10"
                      data-toggle="modal"
                      data-target="#deleteConfirmModal"
                    >
                      <i class="bi bi-x"></i>
                    </a>
                  </td>
    
                  <!-- Delete Confirmation Model -->
                  <div
                    class="modal fade delete"
                    id="deleteConfirmModal"
                    tabindex="-1"
                    role="dialog"
                    aria-labelledby="deleteConfirmModalTitle"
                    aria-hidden="true"
                  >
                    <div class="modal-dialog modal-dialog-centered" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="deleteConfirmModalLongTitle">
                            Delete Patient
                          </h5>
                          <button
                            type="button"
                            class="close"
                            data-dismiss="modal"
                            aria-label="Close"
                          >
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <div class="modal-body">
                          Are you sure you want to delete this patient record?
                        </div>
                        <div class="modal-footer">
                          <a
                            type="button"
                            class="btn btn-secondary"
                            data-dismiss="modal"
                          >
                            No
                          </a>
                          <a href="#" class="btn btn-primary"> Yes </a>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- Modal Completed  -->
                </tr>
              <% } %>
            <% } %> 
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%- include('./footer.ejs') %>
