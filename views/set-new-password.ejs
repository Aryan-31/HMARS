<%- include('./header.ejs') %>
<form action="/submit-set-new-password" method="post">
    <section class="login-sec">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-5 col-lg-5 m-auto">
                    <div class="login-form-box">
                        <h2>Set New Password</h2>
                        <% if(err_msg!=undefined){ %>
                            <span class="error_validate flash_msg" style="color:red" >
                              <%= err_msg %>
                            </span>
                          <% }%>
                          <% if(success_msg!=undefined){ %>
                            <span class="error_validate flash_msg" style="color:#71D840" >
                              <%= success_msg %>
                            </span>
                          <% }%>
                        <div class="form-group mb-3">
                            <label>New Password</label>
                            <input
                                type="password",
                                name="password"
                                class="form-control"
                                placeholder="********"
                                id="otp-field"
                                autocomplete="off"
                            />
                            <span toggle="#otp-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                        </div>
                        <div class="form-group mb-5">
                            <label>Confirm New Password</label>
                            <input
                                type="password",
                                name="confirmPassword"
                                class="form-control"
                                placeholder="********"
                                id="otp-confirm-field"
                                autocomplete="off"
                            />
                            <span toggle="#otp-confirm-field" class="fa fa-fw fa-eye field-icon toggle-confirm-password"></span>
                        </div>
                        <!-- <p class="text-right forgot-link">
                            <a href="/forgot-password-verification-email">Resend OTP</a>
                        </p> -->
                        <div class="mb-3">
                            <input class="common-btn" type="submit" value="Change Password" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>

<script>
  $(".toggle-password").click(function() {
    $(this).toggleClass("fa-eye fa-eye-slash");
    var input = $($(this).attr("toggle"));
    if (input.attr("type") == "password") {
      input.attr("type", "text");
    } else {
      input.attr("type", "password");
    }
  });
  $(".toggle-confirm-password").click(function() {
    $(this).toggleClass("fa-eye fa-eye-slash");
    var input = $($(this).attr("toggle"));
    if (input.attr("type") == "password") {
      input.attr("type", "text");
    } else {
      input.attr("type", "password");
    }
  });
</script>

