<%- include('./header.ejs') %>

<section class="login-sec">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-5 col-lg-5 m-auto">
        <div class="login-form-box">
          <h2>Forgot Password</h2>
          <% if(err_msg!=undefined){ %>
            <span class="error_validate flash_msg" style="color:red" >
              <%= err_msg %>
            </span>
          <% }%>
          <% if(success_msg!=undefined){ %>
            <span class="error_validate flash_msg" style="color:#71D840" >
              <%= success_msg %>
            </span>
          <% }%>
          <form action="/submit-forgot-password" method="post">
            <div class="form-group">
              <label>Email Address</label>
              <input
                type="email"
                class="form-control"
                name="email"
                placeholder="Your registered email address"
                required
              />
              <p id="error-email" class="client-side-err-msg" style="display: none;font-size: smaller;color: rgb(187, 18, 18);"></p>
            </div>
            <div class="mb-3">
              <button type="submit" class="common-btn" href="#" style="padding: 8px 8px;">Submit</button>
            </div>
          </form>
          <div>
            <p>Don't have an account. <a href="/Signup">Signup</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script src="/assets/js/forgotPassword"></script>
<script>
  $(document).ready(function () {
    $("input").blur(function(){
      setTimeout(function() {
        $('.client-side-err-msg').fadeOut('fast');
      }, 5000);
    });
  })
</script>
