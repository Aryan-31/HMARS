<%- include('./header.ejs') %>
<form action="submit-login" method="post">
  <section class="login-sec">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-md-5 col-lg-5 m-auto">
          <div class="login-form-box shadow-5">
            <h2>Welcome to HMARS</h2>
            <% if(err_msg!=undefined){ %>
              <span class="error_validate flash_msg" style="color:red" >
                <%= err_msg %>
              </span>
            <% }%>
            <% if(success_msg!=undefined){ %>
              <span class="error_validate flash_msg" style="color:#71D840" >
                <%= success_msg %>
              </span>
            <% }%>
            <div class="form-group">
              <label>Email Address</label>
              <input
                type="email",
                name="email"
                class="form-control"
                placeholder="Email Address"
                onblur="validateEmail(this.value)"
                required
              />
              <p id="error-email" class="client-side-err-msg" style="display: none;font-size: smaller;color: rgb(187, 18, 18);"></p>
            </div>
            <div class="form-group mb-0">
              <label>Password</label>
              <input
                type="password",
                name="password"
                class="form-control"
                placeholder="*********"
                id="password-field"
                autocomplete="off"
                required
                onblur="validatePassword(this.value)"
              />
              <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
              <p id="error-password" class="client-side-err-msg" style="display: none;font-size: smaller;color: rgb(187, 18, 18);"></p>
            </div>
            <p class="text-right forgot-link">
              <a href="/forgot-pass">Forgot you Password?</a>
            </p>
            <div class="mb-3">
              <input class="common-btn" type="submit" value="Log In" />
              <!-- <a class="common-btn border-btn" href=""
                ><img src="assets/images/Google-Logo.png" /> Login with
                Google</a
              > -->
            </div>
            <div>
              <p>Don't have an account. <a href="/signup">Signup</a></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</form>
<script src="/assets/js/login.js"></script>
<script>
  $(".toggle-password").click(function() {
    $(this).toggleClass("fa-eye fa-eye-slash");
    var input = $($(this).attr("toggle"));
    if (input.attr("type") == "password") {
      input.attr("type", "text");
    } else {
      input.attr("type", "password");
    }
  });

  //Hide flash message after 5 seconds
  setTimeout(function() {
    $('.flash_msg').fadeOut('fast');
  }, 5000);

  $(document).ready(function () {
    $("input").blur(function(){
      setTimeout(function() {
        $('.client-side-err-msg').fadeOut('fast');
      }, 5000);
    });
  })
</script>

